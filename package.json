{
  "name": "chatapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^4.5.3",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "firebase": "^8.0.2",
    "npm": "^7.0.10",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-toastify": "^6.1.0",
    "typescript": "^4.0.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "env-cmd -f .env.dev react-scripts start",
    "build": "react-scripts build",
    "test": "env-cmd -f .env.dev react-scripts test --runInBand --detectOpenHandles --watchAll=false",
    "eject": "react-scripts eject",
    "build:dev": "env-cmd -f .env.dev yarn run build",
    "build:main": "env-cmd -f .env.main yarn run build",
    "cy:run": "yarn run cy:run:dev",
    "cy:run:dev": "env-cmd -f .env.dev cypress run --browser chrome --headless",
    "cy:run:main": "env-cmd -f .env.main cypress run --browser chrome --headless",
    "cy:open": "env-cmd -f .env.dev cypress open"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:cypress/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "cypress": "^6.0.1",
    "cypress-firebase": "^1.5.0",
    "eslint-plugin-cypress": "^2.11.2",
    "firebase-admin": "^9.4.1",
    "prettier": "^2.1.2"
  }
}
